class Solution {
    ArrayList<Integer> EvenOddSum(int N, int Arr[]) {
        // code here
        ArrayList<Integer> arr = new ArrayList<Integer>();
        int even=0, odd=0;
        for(int i=0;i<N;i++)
        {
            if(i%2==0)
            even+=Arr[i];
            else 
            odd+=Arr[i];
            
        }
        arr.add(0,even);
        arr.add(1,odd);
        return arr;
    }
}
